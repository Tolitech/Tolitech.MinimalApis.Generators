root = true

# All files
[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = crlf
insert_final_newline = false
charset = utf-8-bom

# .NET Core coding conventions
[*.cs]
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true
csharp_style_namespace_declarations = file_scoped
csharp_style_unused_value_expression_statement_preference = discard_variable
csharp_style_var_elsewhere = true
csharp_style_var_for_built_in_types = false

# Enforce all diagnostics as errors
dotnet_analyzer_diagnostic.severity = error
dotnet_diagnostic.severity = error

# CA1000: Do not declare static members on generic types
dotnet_diagnostic.CA1000.severity = silent

# CA1008: Enums should have zero value
dotnet_diagnostic.CA1008.severity = silent

# CA1031: Do not catch general exception types
dotnet_diagnostic.CA1031.severity = silent

# CA1034: Nested types should not be visible
dotnet_diagnostic.CA1034.severity = silent

# CA1040: Avoid empty interfaces
dotnet_diagnostic.CA1040.severity = silent

# CA1056: URI-like properties should not be strings
dotnet_diagnostic.CA1056.severity = silent

# CA1515: Consider making public types internal
dotnet_diagnostic.CA1515.severity = silent

# CA1707: Identifiers should not contain underscores
dotnet_diagnostic.CA1707.severity = silent

# CA1711: Identifiers should not have incorrect suffix
dotnet_diagnostic.CA1711.severity = silent

# CA1716: Identifiers should not match keywords
dotnet_diagnostic.CA1716.severity = silent

# CA1724: Type names should not match namespaces
dotnet_diagnostic.CA1724.severity = silent

# CA1725: Parameter names should match base declaration
dotnet_diagnostic.CA1725.severity = silent

# CA1812: Avoid uninstantiated internal classes
dotnet_diagnostic.CA1812.severity = silent

# CA2201: Do not raise reserved exception types
dotnet_diagnostic.CA2201.severity = silent

# CS1591: Missing XML comment for publicly visible type or member
dotnet_diagnostic.CS1591.severity = silent

# IDE0010: Add missing cases
dotnet_diagnostic.IDE0010.severity = silent

# IDE0045: Convert to conditional expression
dotnet_diagnostic.IDE0045.severity = silent

# IDE0046: Convert to conditional expression
dotnet_diagnostic.IDE0046.severity = silent

# IDE0058: Expression value is never used
dotnet_diagnostic.IDE0058.severity = silent

# RCS1043: Remove 'partial' modifier from type with a single part
dotnet_diagnostic.RCS1043.severity = silent

# RCS1261: Resource can be disposed asynchronously
dotnet_diagnostic.RCS1261.severity = silent

# S2094: Classes should not be empty
dotnet_diagnostic.S2094.severity = silent

# S2344: Enumeration type names should not have "Flags" or "Enum" suffixes
dotnet_diagnostic.S2344.severity = silent

# S3267: Loops should be simplified with "LINQ" expressions
dotnet_diagnostic.S3267.severity = silent

# SA1101: Prefix local calls with this
dotnet_diagnostic.SA1101.severity = silent

# SA1118: Parameter should not span multiple lines
dotnet_diagnostic.SA1118.severity = silent

# SA1200: Using directives should be placed correctly
dotnet_diagnostic.SA1200.severity = silent

# SA1210: Using directives should be ordered alphabetically by namespace
dotnet_diagnostic.SA1210.severity = silent

# SA1309: Field names should not begin with underscore
dotnet_diagnostic.SA1309.severity = silent

# SA1633: File should have header
dotnet_diagnostic.SA1633.severity = silent